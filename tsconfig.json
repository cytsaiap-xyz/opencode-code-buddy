{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": false,
        "outDir": "./dist",
        "rootDir": ".opencode/plugins",
        "types": [
            "node"
        ]
    },
    "include": [
        ".opencode/plugins/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
